{
  nats {
    # ex: github.GET.user.codegangsta
    #            \_/ \______________/
    #             |         |
    #           path.1    path.2:
    #
    reply github.> {nats.path.1} https://localhost/{nats.path.2:}
  }
}

localhost {
  log
  reverse_proxy https://api.github.com {
    header_up Host {upstream_hostport}
  }
}
